root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{ts,tsx,js,jsx,json,html,css,md,yml,yaml}]
max_line_length = 100
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[*.{sh,bash}]
end_of_line = lf
insert_final_newline = true

# Tailwind class sorting & JSX consistency
[*.{tsx,jsx}]
quote_type = double
